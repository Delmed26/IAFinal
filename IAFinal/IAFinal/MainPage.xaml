                <StackLayout Orientation="Horizontal" Margin="0, 50">

                    <Label Text="Listo? Haz clic en el siguiente botón"
                       FontSize="Large"
                       TextColor="#080808"/>

                    <Button Text="Elegir fotos"
                            Clicked="Choose_Clicked"
                            HorizontalOptions="EndAndExpand"
                            TextColor="White"
                            BackgroundColor="#CF755A"/>

                </StackLayout>

                <Label Text="Paquetes"
                       HorizontalTextAlignment="Center"
                       FontSize="Header"
                       TextColor="#080808"/>
                <Frame BackgroundColor="#CF755A" Padding="5" Margin="0,10">
                    <StackLayout Orientation="Horizontal" Padding="40" BackgroundColor="White">
                        <Label Text="Básico"
                               TextColor="#080808"
                               FontSize="Title"
                               HorizontalTextAlignment="Start"/>
                        <Label Text="$600"
                               TextColor="#080808"
                               FontSize="Subtitle"
                               HorizontalOptions="EndAndExpand"
                               HorizontalTextAlignment="Start"/>
                    </StackLayout>
                </Frame>

                <Frame BackgroundColor="#CF755A" Padding="5" Margin="0,10">
                    <StackLayout Orientation="Horizontal" Padding="40" BackgroundColor="White">
                        <Label Text="Especial"
                               TextColor="#080808"
                               FontSize="Title"
                               HorizontalTextAlignment="Start"/>
                        <Label Text="$900"
                               TextColor="#080808"
                               FontSize="Subtitle"
                               HorizontalOptions="EndAndExpand"
                               HorizontalTextAlignment="Start"/>
                    </StackLayout>
                </Frame>

                <Frame BackgroundColor="#CF755A" Padding="5" Margin="0,10">
                    <StackLayout Orientation="Horizontal" Padding="40" BackgroundColor="White">
                        <Label Text="Profesional"
                               TextColor="#080808"
                               FontSize="Title"
                               HorizontalTextAlignment="Start"/>
                        <Label Text="$1,500"
                               TextColor="#080808"
                               FontSize="Subtitle"
                               HorizontalOptions="EndAndExpand"
                               HorizontalTextAlignment="Start"/>
                    </StackLayout>
                </Frame>



                <ListView x:Name="lvPredictions"
                          SelectionMode="None">

                    <ListView.Header>
                        <Label Text="Tipos de foto"
                               HorizontalTextAlignment="Center"
                               FontSize="Header"
                               TextColor="#080808"/>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame BackgroundColor="#CF755A" Padding="5" Margin="0,10">
                                    <StackLayout Orientation="Horizontal" Padding="40" BackgroundColor="White">
                                        <Image Source="{Binding Image}"
                                               HeightRequest="100"
                                               WidthRequest="100"
                                               Aspect="AspectFit"/>
                                        <Label Text="{Binding Prediction, StringFormat='Esta foto es de tipo {0}'}"
                                               TextColor="#080808"
                                               FontSize="Subtitle"/>
                                    </StackLayout>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>


            </StackLayout>
        </Grid>


    </ScrollView>

</ContentPage>
